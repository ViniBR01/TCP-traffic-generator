#!/bin/bash

# Script to run larger experiments, involving multiple remote clients
# Before running for the first time do: chmod 755 run_experiment
# ref: https://spin.atomicobject.com/2017/08/24/start-stop-bash-background-process/

filesize=100
periodtime=1000
runtime=5s

echo "Starting experiments!"

trap "pkill start-server" EXIT

./start-server -i 192.168.0.102 -p 8080 -f $filesize -t $periodtime &
./start-server -i 192.168.0.103 -p 8080 -f $filesize -t $periodtime &
./start-server -i 192.168.0.104 -p 8080 -f $filesize -t $periodtime &
./start-server -i 192.168.0.105 -p 8080 -f $filesize -t $periodtime &
./start-server -i 192.168.0.106 -p 8080 -f $filesize -t $periodtime &
./start-server -i 192.168.0.107 -p 8080 -f $filesize -t $periodtime &
./start-server -i 192.168.0.108 -p 8080 -f $filesize -t $periodtime &
./start-server -i 192.168.0.109 -p 8080 -f $filesize -t $periodtime &

sleep $runtime
exit 0
